# John Florian's Preferred Git Config
#
# vim: filetype=gitconfig

[alias]
    br = branch
    ci = commit -v
    clog = log --pretty=format:%s
    co = checkout
    lg = log --graph --abbrev-commit --pretty=oneline --decorate
    revert = git reset --hard
    sed = ! git grep -z --full-name -l '.' | xargs -0 sed -i -e
    st = status

[clean]
    requireForce = false

[color]
    branch = auto
    diff = auto
    interactive = auto
    showbranch = auto
    status = auto
    ui = auto

[core]
    excludesfile = /home/00/d13677/.gitignore
    whitespace = trailing-space,space-before-tab

[diff]
    noprefix
	tool = meld

[help]
    autocorrect = 30

[merge]
    tool = meld
    verbosity = 4

[status]
    showUntrackedFiles = all

[user]
    email = john_florian@dart.biz
    name = John Florian

[difftool]
	prompt = false
