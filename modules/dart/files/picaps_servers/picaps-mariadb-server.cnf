[mysqld]

# GENERAL #
user                           = mysql
default_storage_engine         = InnoDB
socket                         = /var/lib/mysql/mysql.sock
pid_file                       = /var/lib/mysql/mysql.pid

# MyISAM #
key_buffer_size                = 32M
myisam_recover                 = FORCE,BACKUP

# SAFETY #
max_allowed_packet             = 32M # Percona says 16M
max_connect_errors             = 1000000

# DATA STORAGE #
datadir                        = /storage/mysql

# BINARY LOGGING (2013-04-29 CPK: We don't replicate at this point, so we don't use this) #
#log_bin                        = /storage/mysql/mysql-bin
#expire_logs_days               = 14
#sync_binlog                    = 1

# CACHES AND LIMITS #
tmp_table_size                 = 32M
max_heap_table_size            = 32M
query_cache_type               = 0
query_cache_size               = 0
max_connections                = 500
thread_cache_size              = 50
open_files_limit               = 65535
table_definition_cache         = 1024
table_open_cache               = 2048

# INNODB #
innodb_flush_method            = ALL_O_DIRECT #2013-04-29 CPK was O_DIRECT per Percona, but XtraDB only ALL_O_DIRECT was suggested in information on MariaDB
innodb_log_files_in_group      = 2
innodb_log_file_size           = 512M
innodb_log_buffer_size         = 64M #CPK was not included by Percona, but suggested in information on MariaDB
innodb_log_block_size          = 512 #2013-04-30 CPK: 4096 for SSD's according to MariaDB docs
innodb_flush_log_at_trx_commit = 1
innodb_file_format             = Barracuda #2013-04-30 CPK: was not included by Percona configurator, but suggested in information on MariaDB as more modern and better for blobs given its dynamic row format
innodb_file_per_table          = 1
innodb_buffer_pool_size        = 32G
innodb_buffer_pool_instances   = 2 #2013-04-30 CPK: One pool for each physical CPU due to NUMA architecture (Jeremy Cole) (also note numactl --interleave all should be added to mysqld_safe)
innodb_buffer_pool_populate    = 1 #2013-04-30 CPK: preallocate pages at startup so NUMA allocation decisions are made while the buffer cache is still clean
innodb_adaptive_flushing       = 1 #2013-04-30 CPK: was not included by Percona, but suggested in information on MariaDB
innodb_fast_checksum           = 1 #2013-04-30 CPK: not included by Percona configurator, XtraDB only but several times faster than InnoDB checksums

# LOGGING #
log_error                      = /var/log/mariadb/mariadb.log
log_queries_not_using_indexes  = 1
slow_query_log                 = 1
slow_query_log_file            = /storage/mysql/mysql-slow.log
