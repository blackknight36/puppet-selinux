WSGIDaemonProcess puppetboard user=<%= @user -%> group=<%= @user -%> threads=<%= @threads %> maximum-requests=<%= @max_reqs %>
WSGIScriptAlias <%= @wsgi_alias -%> <%= @docroot -%>/wsgi.py

<Directory <%= @docroot -%>>
    WSGIProcessGroup <%= @user %>
    WSGIApplicationGroup %{GLOBAL}
    <IfModule mod_authz_core.c>
        # Apache 2.4
        Require local
        Require ip 10.209.44.0/22
        Require ip 192.168.56.0/24
    </IfModule>
    <IfModule !mod_authz_core.c>
        # Apache 2.2
        Order Deny,Allow
        Deny from all
        Allow from 127.0.0.1
        Allow from 10.209.44.0/22
        Allow from 192.168.56.0/24
        Allow from ::1
    </IfModule>
</Directory>

