Hostname    "<%= @fqdn %>"

FQDNLookup  false
BaseDir     "/var/lib/collectd"
TypesDB     "/usr/share/collectd/types.db"

LoadPlugin syslog
LoadPlugin cpu
LoadPlugin memory
LoadPlugin disk
LoadPlugin load
LoadPlugin interface
LoadPlugin network

<Plugin "network">
    <Listen "0.0.0.0" "25826">
        SecurityLevel "Encrypt"
        AuthFile "/etc/collectd.d/passwd"
    </Listen>
</Plugin>

# send metrics to the local carbon-cache service
LoadPlugin write_graphite

<Plugin write_graphite>
    <Node "<%= @fqdn %>">
        Host "localhost"
        Port "2003"
        Protocol "tcp"
        LogSendErrors true
        StoreRates true
        AlwaysAppendDS false
        EscapeCharacter "_"
    </Node>
</Plugin>
